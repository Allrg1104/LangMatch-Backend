{
    "paths": {
        "/api/chat/login": {
            "post": {
                "summary": "Iniciar sesión",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Autenticación exitosa"
                    },
                    "400": {
                        "description": "Credenciales inválidas"
                    },
                    "500": {
                        "description": "Error del servidor"
                    }
                }
            }
        },
        "/api/chat/usuarios": {
            "post": {
                "summary": "Crear nuevo usuario",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nombre": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "nombre",
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario creado"
                    },
                    "400": {
                        "description": "Datos incompletos"
                    },
                    "500": {
                        "description": "Error del servidor"
                    }
                }
            },
            "get": {
                "summary": "Obtener usuario autenticado",
                "responses": {
                    "200": {
                        "description": "Datos del usuario"
                    },
                    "401": {
                        "description": "No autorizado"
                    }
                }
            }
        },
        "/api/chat/logout": {
            "post": {
                "summary": "Cerrar sesión",
                "responses": {
                    "200": {
                        "description": "Sesión cerrada correctamente"
                    },
                    "500": {
                        "description": "Error al cerrar sesión"
                    }
                }
            }
        }
    }
}